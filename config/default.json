/**
 * Default configurations
 *
 * By default, HTTP is used. If HTTPS is used, then the 'ssl' configuration is used.
 * For SSL configuration, read:
 * https://nodejs.org/api/tls.html#tls_tls_createserver_options_secureconnectionlistener
 */
{
	"nexus": {
		"backlog": 511,
		"debug": true,
		"discovery": true,
		"hostname": "localhost",
		"logging": true,
		"port": 8080,
		"proxy": false,
		"root": "",
		"static": true,
		"staticRoot": "{root}/public",
		"protocol": "http",
		"ssl": {},
	},
	"services": {},
	"registry": {},
	"logging": {
		"root": "{root}/logs",
		"level": "debug",
		"trace": true,
		"transports": {
			"console": {
				"transport": "winston.transports.Console",
				"humanReadableUnhandledException": true,
				"json": false,
				"colorize": true
			},
			"defaultFileHandler": {
				"transport": "winston.transports.File",
				"filename": "nexus.out",
				"humanReadableUnhandledException": true,
				"json": false,
				"maxsize": 5242880, // 5MB
				"maxFiles": 5,
				"colorize": false
			}
		},
		"loggers": {
			"api": {
				"level": "verbose",
				"transports": "defaultFileHandler"
			},
			"nexus": {
				"level": "verbose",
				"transports": "defaultFileHandler"
			},
			"registry": {
				"level": "verbose",
				"transports": "defaultFileHandler"
			},
			"services": {
				"level": "verbose",
				"transports": "defaultFileHandler"
			}
		}
	}
}
